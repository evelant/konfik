{
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "incremental": true,
    "composite": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noErrorTruncation": true,
    "isolatedModules": true,
    "target": "ES2021",
    "module": "ESNext",
    "plugins": [{ "transform": "@effect-ts/tracing-plugin" }],
    "paths": {
      "konfik": ["./packages/konfik"],
      "@konfik/utils/effect/*": ["./packages/@konfik/utils/effect/*"],
      "@konfik/*": ["./packages/@konfik/*"]
    }
  },
  "exclude": ["packages/**/dist", "node_modules", "packages/**/node_modules"]
}
